
@{
    ViewData["Title"] = "Changepassword";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
@section Css{
    <link rel="stylesheet" type="text/css" href="~/css/user/customabroad.css">
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">

        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">
                <!-- Page body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <!-- Basic Form Inputs card start -->
                            <div class="card">
                                <div class="card-header">
                                    <h1>Đổi mật khẩu</h1>
                                    <form class="needs-validation mode" id="user-changepassword" novalidate>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">
                                                Mật khẩu hiện tại
                                            </label>
                                            <div class="col-sm-5">
                                                <input autocomplete="off" onchange="OnchangeInput('user-currentpass'); return false;" id="user-currentpass" name="currentpass" type="password" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">
                                                Mật khẩu mới
                                            </label>
                                            <div class="col-sm-5">
                                                <input autocomplete="off" onchange="OnchangeInput('user-newpass'); return false;" id="user-newpass" name="newpass" type="password" class="form-control" required>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 col-form-label">
                                                Xác nhận mật khẩu mới
                                            </label>
                                            <div class="col-sm-5">
                                                <input autocomplete="off" onchange="OnchangeInput('user-confirmnewpass'); return false;" id="user-confirmnewpass" name="confirmnewpass" type="password" class="form-control" required>
                                            </div>
                                        </div>
                                    </form>
                                        <div>
                                            <button style="margin-top:30px" onclick="validateData()" class="col-sm-2 col-form-label btn btn-primary">
                                                <i class="ti-save"></i>
                                            </button>
                                        </div>
</div>
                            </div>
                            <!-- Main-body end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Script{

    <script>
        try {
            var fileid = (@ViewBag.fileid) ?@ViewBag.fileid: null;

        }
        catch (er) {
            alert("error");
        }
    </script>
    <script src="~/js/user/changepassword.js"></script>
}
